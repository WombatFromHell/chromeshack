{
  "name": "chromeshack",
  "version": "1.74.0",
  "description": "Collection of scripts for Shacknews.",
  "repository": "https://github.com/latestchatty/chromeshack",
  "type": "module",
  "scripts": {
    "generate-licenses": "node utils/generateLicenses.js",
    "generate-cookie": "node utils/testlogin.js",
    "pkgsrc": "node utils/package.js && cp -rf dist dist-firefox artifacts/",
    "build:serviceWorker": "vite build --config vite.serviceWorker.config.ts",
    "build:content": "vite build --config vite.content.config.ts",
    "build:popup": "vite build --config vite.popup.config.ts",
    "build:js": "run-p build:serviceWorker build:content build:popup",
    "manifest:firefox": "mkdir -p dist-firefox && cp -f utils/manifestv3.ffx.json dist-firefox/manifest.json",
    "clean": "rm -rf dist-firefox/ dist/",
    "dev:crxjs": "vite dev",
    "dev:firefoxjs": "NODE_ENV=development run-p build:js manifest:firefox",
    "dev": "tsc && run-s clean && run-p dev:firefoxjs dev:crxjs",
    "build:crxjs": "vite build",
    "build:ffxcrxjs": "run-s build:js manifest:firefox",
    "build": "tsc && run-s clean && run-p build:ffxcrxjs build:crxjs",
    "build:pkg": "run-s build pkgsrc",
    "test": "playwright test",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\" --config ./.prettierrc.json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.0",
    "@fortawesome/free-regular-svg-icons": "^6.5.0",
    "@fortawesome/free-solid-svg-icons": "^6.5.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "dompurify": "^3.0.6",
    "embla-carousel-react": "8.0.0-rc14",
    "html-react-parser": "^4.2.10",
    "jquery": "^3.7.1",
    "lz-string": "^1.5.0",
    "preact": "^10.19.2",
    "prop-types": "15.8.1",
    "text-field-edit": "^4.0.0",
    "ts-debounce": "^4.0.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.21",
    "@playwright/test": "^1.40.1",
    "@preact/preset-vite": "^2.7.0",
    "@types/chrome": "^0.0.246",
    "@types/dompurify": "^3.0.5",
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.10.1",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "adm-zip": "^0.5.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^4.5.0"
  }
}
