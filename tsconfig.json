{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["ESNext.Array", "ES2020.String", "ES2018", "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "incremental": true,
        "declaration": false,
        "noEmit": true,
        "jsx": "react",
        "types": ["node", "./src/types"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules"]
}
