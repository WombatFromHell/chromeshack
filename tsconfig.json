{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es2018",
        "lib": ["ESNext.Array", "ES2020.String", "ES2018", "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "esModuleInterop": true,
        "importsNotUsedAsValues": "preserve",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "incremental": true,
        "composite": true,
        "jsx": "react"
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules"]
}
