{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "lint",
            "group": "build",
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "type": "npm",
            "script": "build:prod",
            "group": "build",
            "problemMatcher": ["$ts-checker5-eslint-webpack", "$ts-checker5-webpack"]
        },
        {
            "type": "npm",
            "script": "build:dev",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$ts-checker5-eslint-webpack-watch", "$ts-checker5-webpack-watch"]
        },
        {
            "type": "npm",
            "script": "cypress",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
